# .env.example
# Environment Variables Template for Timeline Communication App
# Copy this file to .env and fill in your actual values

# Application Configuration
REACT_APP_NAME=Timeline Communication App
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=30000

# Authentication
REACT_APP_AUTH_TOKEN_KEY=timeline_auth_token
REACT_APP_SESSION_TIMEOUT=3600000

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPORT=true

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_INTERCOM_APP_ID=

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_LOGGING=true
REACT_APP_LOG_LEVEL=debug

# Theming
REACT_APP_DEFAULT_THEME=light
REACT_APP_PRIMARY_COLOR=#3B82F6
REACT_APP_SECONDARY_COLOR=#10B981

# ===================================

# .env.development
# Development Environment Variables

REACT_APP_ENVIRONMENT=development
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_ENABLE_LOGGING=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# ===================================

# .env.production
# Production Environment Variables

REACT_APP_ENVIRONMENT=production
REACT_APP_API_BASE_URL=https://api.yourdomain.com/api
REACT_APP_ENABLE_LOGGING=false
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_REDUX_DEVTOOLS=false

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXX-X
REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===================================

# .env.test
# Test Environment Variables

REACT_APP_ENVIRONMENT=test
REACT_APP_API_BASE_URL=http://localhost:3002/api
REACT_APP_ENABLE_LOGGING=false
REACT_APP_LOG_LEVEL=error